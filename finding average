// Creating programme for finding mean

#include <iostream>
using namespace std;

int main() {
    int sub1;
    int sub2;
    int sub3;

    // Input of sub1
    cout<<"Enter the marks of first subject : ";
    cin>>sub1;

    // Input of sub3
    cout<<"Enter the marks of second subject : ";
    cin>>sub2;

    // Input of sub3
    cout<<"Enter the marks of third subject : ";
    cin>>sub3;

    //  Calculating mean 
    int avg = (sub1 + sub2 + sub3)/3;
    cout<<"The average is "<<avg<<"."<<endl;  

    return 0;
}
